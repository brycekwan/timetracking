<%= turbo_frame_tag project  do %>
  <div class="table-row" id="<%= dom_id project %>">
    <div class="table-cell border-b dark:border-slate-600 p-4 pl-8 dark:text-slate-200 text-left">
      <%= project.company.name %>
    </div>
    <div class="table-cell border-b dark:border-slate-600 p-4 pl-8 dark:text-slate-200 text-left">
      <%= project.description %>
    </div>
    <div class="table-cell border-b dark:border-slate-600 p-4 pl-8 dark:text-slate-200 text-left">
      <%=  project.start_at.strftime("%m/%d/%Y %I:%M%p") %>
    </div>
    <div class="table-cell border-b dark:border-slate-600 p-4 pl-8 dark:text-slate-200 text-left">
      <%= project.end_at.strftime("%m/%d/%Y %I:%M%p") %>
    </div>
    <div class="table-cell border-b dark:border-slate-600 p-4 pl-8 dark:text-slate-200 text-left" style="width: 100px;">
      <%= button_to "Delete", project_path(project), method: :delete, form: { style: "display: inline-block" }  %>
      <%= link_to "Edit", edit_project_path(project) %>
    </div>
  </div>
<% end %>
